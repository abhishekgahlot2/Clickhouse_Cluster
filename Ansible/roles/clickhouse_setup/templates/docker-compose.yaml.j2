version: "3.8"
services:
  clickhouse:
    container_name: "clickhouse-{{ ansible_hostname }}-{{ ansible_play_hosts_all.index(inventory_hostname) }}"
    image: "clickhouse/clickhouse-server:{{ clickhouse_version }}"
    volumes:
        - "{{ clickhouse_base_directory_path }}{{ clickhouse_log_directory_path_on_host }}:{{ clickhouse_log_directory_path_on_container }}"
        - "{{ clickhouse_base_directory_path }}{{ clickhouse_log_directory_path_on_host }}:{{ clickhouse_log_directory_path_on_container }}"
        - "{{ clickhouse_base_directory_path }}/Clickhouse/Config/config.xml:/etc/clickhouse-server/config.xml"
        - "{{ clickhouse_log_coordination_path_on_host }}:{{ clickhouse_log_coordination_path_on_container }}"
        - "{{ clickhouse_snapshot_coordination_path_on_host }}:{{ clickhouse_snapshot_coordination_path_on_container }}"
        - "{{ clickhouse_base_directory_path }}/Clickhouse/Clickhouse_SQL_schema/:/root/clickhouse_sql_schema/"

    restart: unless-stopped
    network_mode: host
    ulimits:
      nofile:
        soft: 262144
        hard: 262144
    environment:
      CLICKHOUSE_USER: "{{ clickhouse_user }}"
      CLICKHOUSE_DEFAULT_ACCESS_MANAGEMENT: "1"
      CLICKHOUSE_PASSWORD: "{{ clickhouse_password }}"
